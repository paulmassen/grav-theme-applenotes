{% set emoji = page.header.emoji|default('üìù') %}
{% set title = page.title %}
{% set isPublic = page.header.public|default(false) %}
{% set formattedDate = page.date|date('F d, Y \\a\\t g:i A') %}

<div class="px-2 mb-4 relative">
    {# Back button for mobile - toggle sidebar instead of navigating #}
    <div class="mobile-back-button pt-2 flex items-center mb-2">
        <button type="button" class="flex items-center mobile-toggle-sidebar" aria-label="Show notes list">
            <svg class="text-[#e2a727]" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m15 18-6-6 6-6"></path>
            </svg>
            <span class="text-[#e2a727] text-base ml-1">
                Notes
            </span>
        </button>
    </div>
    <div class="flex justify-center items-center">
        <p class="text-muted-foreground text-xs">
            {{ formattedDate }}
        </p>
        <div class="ml-2 h-6 flex items-center">
            {% if not isPublic %}
                <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold bg-muted-foreground text-white">
                    <svg class="w-3 h-3 mr-1" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    Private
                </div>
            {% endif %}
        </div>
    </div>
    <div class="flex items-center relative">
        <span class="mr-2 text-2xl">
            {{ emoji }}
        </span>
        <span class="text-2xl font-bold flex-grow py-2 leading-normal min-h-[50px]">
            {{ title }}
        </span>
    </div>
</div>

<style>
.mb-4 {
    margin-bottom: 1rem;
}

.justify-center {
    justify-content: center;
}

.h-6 {
    height: 1.5rem;
}

.ml-2 {
    margin-left: 0.5rem;
}

.text-xs {
    font-size: 0.75rem;
}

.inline-flex {
    display: inline-flex;
}

.rounded-full {
    border-radius: 9999px;
}

.border {
    border-width: 1px;
}

.px-2\.5 {
    padding-left: 0.625rem;
    padding-right: 0.625rem;
}

.py-0\.5 {
    padding-top: 0.125rem;
    padding-bottom: 0.125rem;
}

.font-semibold {
    font-weight: 600;
}

.bg-muted-foreground {
    background-color: hsl(var(--muted-foreground));
}

.text-white {
    color: white;
}

.w-3 {
    width: 0.75rem;
}

.h-3 {
    height: 0.75rem;
}

.mr-1 {
    margin-right: 0.25rem;
}

.text-2xl {
    font-size: 1.5rem;
    line-height: 2rem;
}

.font-bold {
    font-weight: 700;
}

.min-h-\[50px\] {
    min-height: 50px;
}

.leading-normal {
    line-height: 1.5;
}

.py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
}
</style>
